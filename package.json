{
  "name": "dolm",
  "version": "0.5.0-beta",
  "description": "A tiny internationalization library.",
  "main": "./src/main.js",
  "bin": "./src/cli/main.js",
  "scripts": {
    "test": "cd tests && tap",
    "format": "prettier \"**/*.{{j,t}s,md}\" \"!tests/tap-snapshots/*\" --write",
    "format-watch": "onchange \"**/*.{{j,t}s,md}\" \"!tests/tap-snapshots/*\" -- prettier --write {{changed}}",
    "dolm": "node ./src/cli/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yishn/dolm.git"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation"
  ],
  "author": "Yichuan Shen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yishn/dolm/issues"
  },
  "homepage": "https://github.com/yishn/dolms",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "proseWrap": "always"
  },
  "dependencies": {
    "@babel/parser": "^7.8.4",
    "@babel/traverse": "^7.8.4",
    "globby": "^11.0.0",
    "prettier": "1.19.1",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "onchange": "^6.1.0",
    "tap": "^14.10.6"
  }
}
