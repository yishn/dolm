{
  "name": "dolm",
  "version": "0.4.2-alpha",
  "description": "A tiny internationalization library.",
  "main": "./src/main.js",
  "scripts": {
    "test": "tap tests/*.test.js --no-coverage",
    "format": "prettier \"**/*.{js,md}\" --write",
    "format-watch": "onchange \"**/*.{js,md}\" -- prettier --write {{changed}}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yishn/dolm.git"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation"
  ],
  "author": "Yichuan Shen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yishn/dolm/issues"
  },
  "homepage": "https://github.com/yishn/dolms",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "proseWrap": "always"
  },
  "devDependencies": {
    "onchange": "^6.1.0",
    "prettier": "1.19.1",
    "tap": "^14.10.6"
  }
}
